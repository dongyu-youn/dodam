<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="#ffffff" android:gravity="center"
        android:orientation="vertical" >



        <ImageView
            android:id="@+id/img" android:scaleType="fitXY"

            android:layout_width="40dip"
            android:layout_height="40dip" android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip" android:layout_weight="100"
        android:layout_height="match_parent" android:layout_marginLeft="10dip"
        android:gravity="center_vertical|left" >

        <TextView
            android:id="@+id/name" android:paddingLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:textColor="#000000"
            android:textSize="17dip"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>