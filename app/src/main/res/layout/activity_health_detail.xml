<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
 >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#96C157"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <LinearLayout
            android:id="@+id/serch_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="320"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_txt"
                android:text="운동법"
                android:layout_width="0dip"
                android:layout_height="32dip"
                android:layout_weight="500"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="23dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left">

            <Button
                android:id="@+id/back"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/icon_back"
                android:textColor="#ffffff"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right">

            <Button
                android:id="@+id/home"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/btn_home"
                android:textColor="#ffffff"></Button>

        </LinearLayout>
    </FrameLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1000">

        <LinearLayout
            android:layout_width="match_parent" android:layout_marginTop="10dip"
            android:layout_height="match_parent" android:paddingRight="5dip"
            android:orientation="vertical">
            -

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" android:paddingRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="사용기구"
                    android:textColor="#000000"
                    android:textSize="15dip"></TextView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dip"
                    android:layout_height="40dip" android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border1"
                    android:paddingLeft="10dip"
                    android:textColor="#000000"
                    android:textSize="15dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" android:paddingRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="부위"
                    android:textColor="#000000"
                    android:textSize="15dip"></TextView>

                <TextView
                    android:id="@+id/cate"
                    android:layout_width="0dip"
                    android:layout_height="40dip" android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border1"
                    android:paddingLeft="10dip"
                    android:textColor="#000000"
                    android:textSize="15dip" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent" android:layout_marginTop="5dip"
                android:layout_height="180dip" android:paddingRight="5dip" android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="운동법"
                    android:textColor="#000000"
                    android:textSize="15dip"></TextView>

                <TextView
                    android:id="@+id/cons"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/border1"
                    android:paddingLeft="10dip"
                    android:textColor="#000000"
                    android:textSize="14dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_marginTop="10dip"
                android:layout_height="150dip" android:paddingRight="5dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="사진"
                    android:textColor="#000000"
                    android:textSize="15dip"></TextView>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="0dip"
                    android:layout_height="140dip"  android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:background="@drawable/border1"
                />

            </LinearLayout>



        </LinearLayout>


    </ScrollView>



</LinearLayout>