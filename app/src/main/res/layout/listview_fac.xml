<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="0dip" android:layout_weight="100"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left" >

        <TextView
            android:id="@+id/name" android:paddingLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:textColor="#000000"
            android:textSize="17dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dip"
        android:layout_height="50dip"
        android:background="#ffffff" android:gravity="center" android:paddingRight="5dp"
        android:orientation="vertical" >



        <Button
            android:id="@+id/use"

            android:layout_width="80dip"
            android:layout_height="40dip" android:gravity="center"
            android:background="#96C157" android:text="사용법"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dip" />


    </LinearLayout>

</LinearLayout>